<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navTab.navTabFragment.boardDtlFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical">

            <!-- 사용자 프로필 -->
            <LinearLayout
                android:id="@+id/userLinearLayout"
                android:background="#70FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:orientation="horizontal"
                android:gravity="left">

                <!-- 사용자 프로필 이미지 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="75dp">

                    <ImageView
                        android:id="@+id/userProfileImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/profile" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/userId"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="사용자 이름" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 이미지뷰 -->
                <ImageView
                    android:id="@+id/boardThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/readyimg"
                    android:visibility="gone"
                    />
                <!-- 이미지뷰 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/DtlViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/readyimg" />
                <!-- 인디케이터 -->
                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="@color/md_blue_200"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="16dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="2.5"
                    app:selectedDotColor="@color/md_indigo_A400"
                    app:progressMode="true"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    />

            </FrameLayout>
            <!-- 식당 정보 영역 -->
            <LinearLayout
                android:id="@+id/toResDtl"
                android:background="#33673AB7"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">

                <!-- 식당 이미지 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"

                    app:cardCornerRadius="75dp">

                    <ImageView
                        android:id="@+id/resProfileImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/burger"></ImageView>
                </androidx.cardview.widget.CardView>

                <!-- 식당 정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <!-- 식당 이름 + 주소 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:layout_weight="8">

                        <!-- 식당 이름 -->
                        <TextView
                            android:id="@+id/resName"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nexonbold"
                            android:lineSpacingExtra="5dp"
                            android:text="식당명"></TextView>

                        <!-- 식당 주소 -->
                        <TextView
                            android:id="@+id/resAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="5dp"
                            android:text="식당주소 불러오는중"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="2">

                        <!-- 식당 평균 점수 -->
                        <TextView
                            android:id="@+id/resScore"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Default" />

                        <TextView
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="점" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>
            <!-- 게시글 점수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp">

                <RatingBar
                    android:id="@+id/boardScore"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="#E91E63"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1"/>

                <!--빈 공간 -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_weight="0">
                    <ImageView
                        android:id="@+id/likeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/baseline_thumb_up_off_alt_24"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/countLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp"
                        android:text="0"
                        android:layout_gravity="center_vertical">
                    </TextView>

                    <ImageView
                        android:id="@+id/dislikeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/baseline_thumb_down_off_alt_24"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/countDislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp"
                        android:text="0"
                        android:layout_gravity="center_vertical">
                    </TextView>

                </LinearLayout>
            </LinearLayout>




            <!-- 게시글 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:orientation="vertical">

                <!-- 게시글 제목 -->
                <TextView
                    android:id="@+id/boardDtlTitle"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexonbold"
                    android:lineSpacingExtra="5dp"
                    android:text="제목" />

                <TextView
                    android:id="@+id/boardDtlContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:text="Content"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/AllComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nexonbold"
                    android:lineSpacingExtra="5dp"
                    android:text="댓글갯수" />

            </LinearLayout>





